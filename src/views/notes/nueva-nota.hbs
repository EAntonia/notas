{{#each errores}}
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        {{text}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{{/each}}

<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Nueva Nota</h3>
        </div>
        <div class="card-body">
            <form action="/notes/nueva-nota" method="post">
                <div class="form-group m-2">
                    <label for="titulo">Título:</label>
                    <input type="text" name="titulo" class="form-control" placeholder="Título" autofocus value="{{titulo}}">
                </div>
                <div class="form-group m-2">
                    <label for="descripcion">Descripción:</label>
                    <textarea name="descripcion" class="form-control" placeholder="Descripción">{{descripcion}}</textarea>
                </div>
                <div class="form-group m-2">
                    <label for="categoria">Categoría:</label>
                    <select name="categoria" id="categoria" class="form-control">
                        <option value="trabajo">Trabajo</option>
                        <option value="casa">Casa</option>
                    </select>
                </div>
                <div class="form-group d-grid gap-2 m-2">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>